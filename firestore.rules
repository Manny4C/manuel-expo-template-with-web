rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  	function isAdmin() {
    	return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }
  
  	function isMeOrFriend(userId) {
    	return request.auth != null && (
      	request.auth.uid == resource.data.id || 
       	request.auth.uid in resource.data.friends
      );
    }
    
    function isMyFriendCode(friendCode) {
    	return request.auth != null;
    	// return request.auth != null && (
    	// request.auth.uid == resource.data.userId
    	// );
    }
    
    // ðŸ”¥ CHILLS COLLECTION
    match /chills/{chillId} {
    	allow create: if request.auth != null;
    
      allow read, write, update: if request.auth != null &&
        (
        	isAdmin() ||
        	request.auth.uid == resource.data.host || 
         	request.auth.uid in resource.data.invited
        );
    }
    
    match /rally/{rallyId} {
    	allow create: if request.auth != null;
    
      allow read, write, update: if request.auth != null &&
        (
        	isAdmin() ||
        	request.auth.uid == resource.data.host || 
         	request.auth.uid in resource.data.invited
        );
    }

    // ðŸ”¥ USERS COLLECTION
    match /users/{userId} {
      // âœ… Read: Allowed if you are in the user's friends list or it's your own profile
      allow read: if isAdmin() || isMeOrFriend(userId);

      // âœ… Write: Only allowed if updating your own document
      allow create, write, update: if isAdmin() || (request.auth != null && request.auth.uid == userId);
    }
    
    match /friendCodes/{friendCode} {
    	allow read: if true;

  		allow create: if isMyFriendCode(friendCode) || isAdmin();

      allow delete: if isMyFriendCode(friendCode) || isAdmin();
    }

    // ðŸ‘¶ SLUGS COLLECTION - URL slug reservation
    match /slugs/{slug} {
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    // ðŸ‘¶ BABY PAGES COLLECTION
    match /babyPages/{pageId} {
      // Public pages readable by anyone for searchable, authenticated for private
      allow read: if resource.data.privacy == 'searchable'
        || (request.auth != null);

      allow create: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    // ðŸ‘¶ AVAILABILITY SLOTS COLLECTION
    match /availabilitySlots/{slotId} {
      // Anyone can read availability (for public booking pages)
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    // ðŸ‘¶ BOOKINGS COLLECTION
    match /bookings/{bookingId} {
      // Helper to check if user is page owner
      function isPageOwner(babyPageId) {
        return get(/databases/$(database)/documents/babyPages/$(babyPageId)).data.ownerId == request.auth.uid;
      }

      // Visitor can read their own bookings, page owner can read all
      allow read: if request.auth != null && (
        resource.data.visitorId == request.auth.uid ||
        isPageOwner(resource.data.babyPageId)
      );

      allow create: if request.auth != null
        && request.resource.data.visitorId == request.auth.uid;

      // Visitor can update (cancel/reschedule), owner can update (approve/reject)
      allow update: if request.auth != null && (
        resource.data.visitorId == request.auth.uid ||
        isPageOwner(resource.data.babyPageId)
      );

      // No hard delete - use status change
      allow delete: if false;
    }

    // ðŸ‘¶ GUEST LISTS COLLECTION
    match /guestLists/{guestId} {
      allow read: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
      allow create: if request.auth != null
        && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.ownerId == request.auth.uid;
    }

    // ðŸ“§ EMAIL QUEUE (for Firebase extension)
    match /mail/{emailId} {
      allow read: if false;
      allow create: if request.auth != null;
    }
  }
}
